@model CLUB_VALERO_DB.ViewModel.UtilityPaymentModel

@{
    ViewBag.Title = "UtilityPaymentUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="pt-5">UtilityPaymentUser</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal pt-3">     
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-7">
                @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Utility-Payment" class="btn btn-primary" />
            </div>
        </div>
    </div>
}


