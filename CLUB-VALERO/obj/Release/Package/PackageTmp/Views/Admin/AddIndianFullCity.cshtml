@model CLUB_VALERO_DB.ViewModel.IndianFullCityPageModel

@{
    ViewBag.Title = "AddIndianFullCity";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .form-control {
        border-color: green;
    }
</style>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal pt-4">
        <h4 class="text-black font-italic">IndianFullCityPageModel</h4>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">

            <label class="control-label col-md-2">Indian City Name</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IndianCityId, ViewBag.Indian as IEnumerable<SelectListItem>, "------Select Indian City------", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IndianCityId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CityDescription, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">            
                @Html.TextAreaFor(model => model.CityDescription, new {@class="form-control"})
                @Html.ValidationMessageFor(model => model.CityDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add-Indian-City-Name" class="btn btn-primary" />
            </div>
        </div>
    </div>
}


<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>


<script>
    $('#CityDescription').summernote({
        placeholder: 'Description',
        tabsize: 2,
        height: 120,
        toolbar: [
            ['style', ['style']],
            ['font', ['bold', 'underline', 'clear']],
            ['color', ['color']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['table', ['table']],
            ['insert', ['link', 'picture', 'video']],
            ['view', ['fullscreen', 'codeview', 'help']]
        ]
    });
</script>