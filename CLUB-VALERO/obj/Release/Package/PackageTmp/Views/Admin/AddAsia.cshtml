@model CLUB_VALERO_DB.ViewModel.AsiaModel

@{
    ViewBag.Title = "AddAsia";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .form-control{
        border-color: green;
    }
</style>
<h2 class="font-italic pt-5">AddAsia</h2>

          @if(TempData["msg"]!=null)
            {
                <div class="alert alert-success">
                    <span>@TempData["msg"]</span>
                </div>
            }

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal pt-5">
      
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.AsiaName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.AsiaName, new { htmlAttributes = new { @class = "form-control", @required="required" } })
                @Html.ValidationMessageFor(model => model.AsiaName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add-Asia-Name" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

