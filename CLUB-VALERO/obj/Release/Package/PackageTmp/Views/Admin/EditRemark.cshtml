@model CLUB_VALERO_DB.Entities.Remark

@{
    ViewBag.Title = "EditRemark";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-warning mt-5">Update Remark</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal mt-4">       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)      

        <div class="form-group">
            @Html.LabelFor(model => model.CreateRemark, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CreateRemark, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CreateRemark, "", new { @class = "text-danger" })
            </div>
        </div>       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update-Remark" class="btn btn-primary" />
            </div>
        </div>
    </div>
}


