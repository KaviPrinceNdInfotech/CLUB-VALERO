@model CLUB_VALERO_DB.Entities.IndianCity

@{
    ViewBag.Title = "AddIndianCity";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .form-control{
        border-color: green;
    }
</style>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <h5 class="text-black font-italic pt-4">Add Indian City</h5>

    if(TempData["msg"] !=null)
                {
                    <div class="alert alert-success">
                        <span>@TempData["msg"]</span>
                    </div>
                }
    <div class="form-horizontal pt-5">
       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add-Indian-City" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

