@model CLUB_VALERO_DB.ViewModel.RemarkModel

@{
    ViewBag.Title = "AddRemark";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-warning mt-4">Add Remark</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal mt-3">
       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })        

        <div class="form-group">
            @Html.Label("Remark", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.CreateRemark, 5, 100, new { htmlAttributes = new { @class = "form-control"} })
                @Html.ValidationMessageFor(model => model.CreateRemark, "", new { @class = "text-danger" })
            </div>
        </div>
        
