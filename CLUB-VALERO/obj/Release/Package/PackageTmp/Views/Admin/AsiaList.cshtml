@model IEnumerable<CLUB_VALERO_DB.Entities.Asia>

@{
    ViewBag.Title = "AsiaList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="font-italic pt-4">AsiaList</h2>

@if(TempData["msg"] !=null)
            {
                <div class="alert alert-success mt-3 text-center">
                    <span>@TempData["msg"]</span>
                </div>
            }

<table class="table table-hover table-responsive-md mt-5">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AsiaName)
        </th>
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AsiaName)
        </td>
        <td>
           
            @Html.ActionLink("Delete", "AsiaDelete", new { id=item.Id },new { @class="btn btn-danger"})
        </td>
    </tr>
}

</table>
